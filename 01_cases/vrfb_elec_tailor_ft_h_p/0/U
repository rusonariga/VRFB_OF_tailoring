FoamFile
{
    version     2.0;
    format      binary;
    class       volVectorField;
    location    "1";
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    walls_porous
    {
        type            slip;
    }
    walls_channel
    {
        //type            slip;
         type            noSlip;
    }
    
    walls_intrusion
    {
        //type            slip;
         type            noSlip;
    }

    outlet
    {
        type            zeroGradient;
        type            inletOutlet;
        inletValue      uniform (0 0 0);
        value           uniform (0 0 0);
    }
    inlet
    {
        type                    flowRateInletVelocity;
        volumetricFlowRate      constant 6e-07;
    }
}


